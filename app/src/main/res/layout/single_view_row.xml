<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/d6"
    card_view:cardElevation="@dimen/d2"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d4"
        android:weightSum="6"
        android:orientation="vertical"
        android:padding="@dimen/d4">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/d120"
            android:weightSum="5"

            android:orientation="horizontal"
            android:background="#FFFFFF">
            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/d70"
                    android:layout_height="@dimen/d70"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"

                    />
                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/title_text_view"
android:padding="@dimen/d10"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/fontSizeSmall"
                    android:lines="2"
                    android:text="@string/app_name"
                    android:paddingRight="@dimen/d10"/>
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:id="@+id/author_text_view"
                    android:gravity="left"

                    android:textColor="#000000"
                    android:drawablePadding="@dimen/d4"


                    android:textSize="@dimen/fontSizeSmall"
                    android:text="@string/app_name"
                    android:padding="@dimen/d10"/>

                    <TextView
                        android:id="@+id/date_text_view"
                        android:layout_width="fill_parent"

                        android:layout_height="fill_parent"
                        android:drawablePadding="@dimen/d4"

                        android:gravity="right|bottom"
                        android:padding="@dimen/d10"

                        android:text="@string/app_name"
                        android:textColor="#000000"
                        android:textSize="@dimen/fontSizeSmall" />
                </FrameLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>